<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijingxuanze"
    android:orientation="vertical" >

    <!-- $Id: clear.xml 126 2014-02-24 10:47:35Z gww $ -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"
        android:background="@drawable/clear" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/center_line"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/clear_complete"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/clear_complete"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/worn"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:text="@string/ClearWorn"
            android:textColor="@android:color/white"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-5dp"
            android:background="@drawable/clear_bt_clear"
            android:onClick="clear"
            android:text="@string/clear"
            android:textColor="@android:color/white"
            
            android:textSize="28sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/clear_bt_back_selector"
            android:gravity="center"
            android:onClick="back"
            android:text="@string/back"
            android:textColor="@android:color/white"
            android:textSize="28sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_process"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginLeft="500dp"
        android:layout_marginTop="260dp"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/loading" />

</RelativeLayout>