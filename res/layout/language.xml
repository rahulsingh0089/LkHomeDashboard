<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijingxuanze"
     >
     
<!-- $Id: language.xml 60 2014-01-21 07:41:33Z xgh $ -->

    
     <ImageView 
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_marginTop="@dimen/top_image_margin_top"
         android:layout_marginRight="@dimen/top_image_margin_right"
         android:src="@drawable/title"
         />

    <ListView
        android:id="@+id/languages"
        android:layout_width="800dp"
        android:layout_marginTop="300dp"
        android:layout_height="400dp"
        android:choiceMode="singleChoice"
        android:divider="@drawable/deviler"
        android:drawSelectorOnTop="true"
        android:descendantFocusability="blocksDescendants"
        android:listSelector="@drawable/selector"
        android:layout_centerVertical="true" 
        
        android:layout_alignParentRight="true"
        >
    </ListView>
</RelativeLayout>