<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/market_item_bg"
    android:gravity="center"
    android:orientation="vertical" 
    android:background="@drawable/market_item_hover_selector" 
    
    android:clickable="true"
    >

<!-- $Id: grid_item.xml 66 2014-01-26 01:46:36Z xgh $ -->

    
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="123dp" 
        >

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/app_icon"
            android:layout_alignTop="@+id/app_icon"
            android:src="@drawable/install" 
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" 
        android:ellipsize="marquee"
        />

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/app_summary"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
