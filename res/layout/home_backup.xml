<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijingxuanze"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:weightSum="5" >


    
    <include layout="@layout/home_back_title" />

    <RelativeLayout
        android:id="@+id/home_backup_ll"
        android:layout_width="1250dp"
        android:layout_height="405dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:id="@+id/home_backup_ll_movie"
            android:layout_width="fill_parent"
            android:layout_height="405dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/movie_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/notice_left"
                android:visibility="invisible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_move"
                android:layout_width="1100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/movie_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notice_right"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_backup_ll_app"
            android:layout_width="fill_parent"
            android:layout_height="405dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/app_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/notice_left"
                android:visibility="invisible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_app"
                android:layout_width="1100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/app_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notice_right"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_backup_ll_game"
             android:layout_width="fill_parent"
            android:layout_height="405dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/game_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/notice_left"
                android:visibility="invisible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_game"
                android:layout_width="1100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/game_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notice_right"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_backup_ll_scan"
            android:layout_width="fill_parent"
             android:layout_height="405dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/scan_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/notice_left"
                android:visibility="invisible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_scan"
                android:layout_width="1100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/scan_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notice_right"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_backup_ll_user"
            android:layout_width="fill_parent"
            android:layout_height="405dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/user_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/notice_left"
                android:visibility="invisible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_user"
                android:layout_width="1100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/user_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notice_right"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_backup_ll_setting"
            android:layout_width="fill_parent"
             android:layout_height="405dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/setting_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:background="@drawable/notice_left"
                android:visibility="invisible" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_settting"
                android:layout_width="1100dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:id="@+id/setting_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@drawable/notice_right"
                android:visibility="invisible" />
        </LinearLayout>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frame_move"
            android:layout_alignLeft="@+id/home_app_list"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="-100dp"
            android:background="@drawable/temp_frame"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_backup_ll_recommend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/Recommend_one"
            android:layout_width="447dp"
            android:layout_height="405dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:nextFocusDown="@+id/home_backup_bt_recommend" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/Recommend_two"
                    android:layout_width="210dp"
                    android:layout_height="200dp"
                    android:background="@null" />

                <ImageButton
                    android:id="@+id/Recommend_three"
                    android:layout_width="425dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/Recommend_four"
                    android:layout_width="210dp"
                    android:layout_height="200dp"
                    android:background="@null"
                    android:nextFocusDown="@+id/home_backup_bt_recommend" />

                <ImageButton
                    android:id="@+id/Recommend_five"
                    android:layout_width="210dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:nextFocusDown="@+id/home_backup_bt_recommend" />

                <ImageButton
                    android:id="@+id/Recommend_six"
                    android:layout_width="210dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:nextFocusDown="@+id/home_backup_bt_recommend" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/home_buttom_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_weight="2"
        android:gravity="center_vertical" >
		<ImageView
             android:id="@+id/move_frame"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:focusable="false"
             android:background="@drawable/underline" 
             android:layout_marginLeft="120dp"
             android:layout_marginRight="-290dp"
             />
        <Button
            android:id="@+id/home_backup_bt_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rec_"
            android:layout_marginLeft="240dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            android:id="@+id/home_backup_bt_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/movie_"
            android:layout_marginLeft="60dp"
             android:layout_marginBottom="10dp"
              android:layout_gravity="center"
            android:gravity="center"
            />

        <Button
            android:id="@+id/home_backup_bt_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_"
             android:layout_marginLeft="60dp"
              android:layout_marginBottom="10dp"
               android:layout_gravity="center"
            android:gravity="center"
             />

        <Button
            android:id="@+id/home_backup_bt_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/game_"
             android:layout_marginLeft="60dp"
              android:layout_marginBottom="10dp"
               android:layout_gravity="center"
            android:gravity="center"
           />

      <!--   <Button
            android:id="@+id/home_backup_bt_scan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/home_back_button"
            android:text="@string/home_backup_bt_scan"
            android:textColor="@android:color/white"
            android:textSize="35sp" /> -->

        <Button
            android:id="@+id/home_backup_bt_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_"
             android:layout_marginLeft="60dp"
              android:layout_marginBottom="10dp"
               android:layout_gravity="center"
            android:gravity="center"
             />

        <Button
            android:id="@+id/home_backup_bt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setting_"
             android:layout_marginLeft="60dp"
              android:layout_marginBottom="10dp"
               android:layout_gravity="center"
            android:gravity="center"
            />
        <RelativeLayout
            android:id="@+id/rl_msg_back"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
             >

            <Button
                android:id="@id/home_btMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="7dp"
                android:background="@drawable/new_1"
                android:gravity="center"
                android:onClick="gotoMessage" />

            <TextView
                android:id="@+id/msgNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/home_btMsg"
                android:layout_alignTop="@+id/home_btMsg"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
               />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>